<div class="container my-3">
    <div class="row">
        <div class="col-md-6">
            <div class="img">
                <img src="<%= product.imageSrc %>" alt="<%= product.name %>">
            </div>
        </div>
        <div class="col-md-6">
            <h2><%= product.name %> </h2>
            <h5><%= "$: " + product.price %> </h5>
            <p><%= "Quantity: " +  product.quantity %> </p>
            <span><%= "Information: " + product.info %> </span><br>
            <a href="/cart/add/<%= product._id %>" class="addCart btn btn-primary my-1 <% if (product.quantity == 0) { %>
                disabled
                <% } %> " >Add to cart</a>

        </div>
    </div>
</div>

